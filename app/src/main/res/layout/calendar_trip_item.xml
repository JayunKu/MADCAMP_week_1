<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- 여행지 이미지 -->
    <ImageView
        android:id="@+id/imgPlace"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginEnd="12dp"
        android:contentDescription="여행지 이미지"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 여행지 이름 -->
    <TextView
        android:id="@+id/tvPlaceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="여행지 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/imgPlace"
        app:layout_constraintStart_toEndOf="@+id/imgPlace"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 날짜 -->
    <TextView
        android:id="@+id/tvDates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025/06/07 ~ 2025/06/10"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@+id/tvPlaceName"
        app:layout_constraintStart_toStartOf="@+id/tvPlaceName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imgPlace" />

</androidx.constraintlayout.widget.ConstraintLayout>

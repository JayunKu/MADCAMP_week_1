<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/uploadPhototitle"
        style="@style/fonts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 사진을 업로드해주세요!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uploadPhoto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"/>

    <GridLayout
        android:id="@+id/photoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">


    <TextView
        android:id="@+id/dest"
        style="@style/fonts_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="여행장소" />

    <EditText
        android:id="@+id/inputdest"
        style="@style/input"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="0dp"
        android:background="@color/grey" />
    </GridLayout>
    <Button
        android:id="@+id/galleryBtn"
        style="@style/commonButton"
        android:layout_marginTop="655dp"
        android:text="갤러리에서 사진찾기"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="btnClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>